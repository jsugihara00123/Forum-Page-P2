<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Topic:</h3>

    <form class="form new-topic-form">
      <div class="form-group">
        <label for="topic-name">Topic name:</label>
        <input class="form-input" type="text" id="topic-name" name="topic-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="topic-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="topic-funding" name="topic-funding" />
      </div> --}}
      <div class="form-group">
        <label for="topic-desc">description:</label>
        <textarea class="form-input" id="topic-desc" name="topic-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if topics.length}}
  <div class="col-md-6 topic-list">
    <h3>Current topics:</h3>

    {{#each topics as |topic|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/topic/{{topic.id}}">{{topic.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{topic.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
